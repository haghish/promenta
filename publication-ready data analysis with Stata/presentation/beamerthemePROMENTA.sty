% Official presentation theme for UiO
% Adapted for PROMENTA by E. F. Haghish
% version 1.0 23.02.2021

\def\UiOlang{e-}
\DeclareOptionBeamer{norsk}{\def\UiOlang{}}
\DeclareOptionBeamer{nynorsk}{\def\UiOlang{}}

\def\UiOimage{columns}
\DeclareOptionBeamer{balloons-200}{\def\UiOimage{balloons-200}}
\DeclareOptionBeamer{promenta}{\def\UiOimage{promenta}}

\DeclareOptionBeamer{sky-200}{\def\UiOimage{sky-200}}
\DeclareOptionBeamer{square-200}{\def\UiOimage{square-200}}
\ProcessOptionsBeamer

\RequirePackage{type1cm}
\RequirePackage{type1ec}

\definecolor{uiored}{cmyk}{0,1,1,0}

\mode<presentation>
\usecolortheme{rose}
\setbeamercolor{structure}{fg=uiored}

\setbeamertemplate{background}
  {\def\UiOBeamer@BGA{uio-\UiOlang\UiOimage}%
    \def\UiOBeamer@BGB{\UiOlang uio2000-bg}%
    \ifnum\insertframenumber=1
      \includegraphics[width=\paperwidth,height=\paperheight]{\UiOBeamer@BGA}%
    \else
      \includegraphics[width=\paperwidth,height=\paperheight]{\UiOBeamer@BGB}%
    \fi}

\renewcommand{\frametitle}[1]{{\bf\LARGE #1\par}\bigskip}

\IfFileExists{t1ma1.fd}%
  {\renewcommand{\sfdefault}{ma1}}  % Arial, if possible
  {\renewcommand{\sfdefault}{phv}}  % Otherwise, Helvetica

\setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}
\mode
<all>
